{
    "$schema": "https://raw.githubusercontent.com/reVISit-studies/study/main/src/parser/StudyConfigSchema.json",
    "studyMetadata": {
        "title": "Basic Randomization Study",
        "version": "pilot",
        "authors": [
            "CA3 @ Aarhus University"
        ],
        "date": "2024-07-25",
        "description": "A simple questionnaire study",
        "organizations": [
            "Aarhus University",
            "University of Utah",
            "WPI",
            "University of Toronto"
        ]
    },
    "uiConfig": {
        "contactEmail": "ellemose@cs.au.dk",
        "helpTextPath": "visualization-complexity/assets/help.md",
        "logoPath": "revisitAssets/revisitLogoSquare.svg",
        "withProgressBar": true,
        "autoDownloadStudy": false,
        "sidebar": false
    },
    "baseComponents": {
        "tagPickerWithStimuli": {
            "description": "A tag picker that allows for custom tags",
            "instruction": "You have to select or create at least one tag in order to continue.",
            "type": "react-component",
            "path": "visualization-complexity/assets/TagPickerWithStimuli.tsx",
            "parameters": {
                "stimulusNumber": 1
            },
            "response": [
                {
                    "id": "tags",
                    "required": true,
                    "hidden": true,
                    "type": "iframe",
                    "prompt": "Choose the tags that best fit your reason for the complexity rating"
                }
            ]
        }
    },
    "components": {
        "introduction": {
            "type": "markdown",
            "path": "visualization-complexity/assets/introduction.md",
            "response": []
        },
        "post-survey": {
            "type": "questionnaire",
            "response": [
                {
                    "id": "q3-satisfaction",
                    "prompt": "Rate your satisfaction with this survey from 1 (not enjoyable) to 5 (very enjoyable).",
                    "required": true,
                    "location": "belowStimulus",
                    "type": "likert",
                    "leftLabel": "Not Enjoyable",
                    "rightLabel": "Very Enjoyable",
                    "numItems": 5
                }
            ]
        },
        "stimulus1": {
            "baseComponent": "tagPickerWithStimuli",
            "description": "A cool tag picker",
            "response": [
                {
                    "id": "stimulus1",
                    "prompt": "How complex does this data visualization seem to you?",
                    "required": true,
                    "hidden": false,
                    "location": "aboveStimulus",
                    "type": "likert",
                    "leftLabel": "Very simple",
                    "rightLabel": "Very complex",
                    "numItems": 9
                }
            ],
            "parameters": {
                "stimulusNumber": 1
            }
        },
        "stimulus2": {
            "baseComponent": "tagPickerWithStimuli",
            "description": "A cool tag picker",
            "response": [
                {
                    "id": "stimulus2",
                    "prompt": "How complex does this data visualization seem to you?",
                    "required": true,
                    "hidden": false,
                    "location": "aboveStimulus",
                    "type": "likert",
                    "leftLabel": "Very simple",
                    "rightLabel": "Very complex",
                    "numItems": 9
                }
            ],
            "parameters": {
                "stimulusNumber": 2
            }
        }
    },
    "sequence": {
        "components": [
            "introduction",
            {
                "components": [
                    "stimulus1",
                    "stimulus2"
                ],
                "order": "random"
            },
            "post-survey"
        ],
        "order": "fixed"
    }
}